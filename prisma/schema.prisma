generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Project {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())

  documents Document[]
}

model Document {
  id          String   @id @default(cuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id])

  filename    String
  mimeType    String
  sizeBytes   Int
  storageKey  String?

  createdAt   DateTime @default(now())

  extractionRuns ExtractionRun[]
}

model ExtractionRun {
  id         String   @id @default(cuid())
  documentId String
  document   Document @relation(fields: [documentId], references: [id])

  status     ExtractionStatus @default(PENDING)
  model      String?
  promptVer  String?
  error      String?

  rawText    String?
  outputJson Json?

  createdAt  DateTime @default(now())
  startedAt  DateTime?
  finishedAt DateTime?
}

enum ExtractionStatus {
  PENDING
  RUNNING
  SUCCEEDED
  FAILED
}

